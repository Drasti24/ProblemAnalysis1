@model DatePickerHint.Models.Student

<h2>Add New Student</h2>

<!-- this form submits to the 'Create' action to add a new student to the database -->
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" required />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" required />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" required max="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
    </div>

    <div class="form-group">
        <label asp-for="GPA"></label>
        <input asp-for="GPA" class="form-control" required min="0" max="4" step="0.1" />
        <span class="text-danger" asp-validation-for="GPA"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProgramOfStudyId"></label>
        <!-- this selects dropdown lists available programs of study.-->
        <select asp-for="ProgramOfStudyId" class="form-control">
            <option value="">Select a program of study...</option>
            @foreach (var program in ViewBag.ProgramOfStudies)
            {
                <!-- for each program, create an option to select. -->
                <option value="@program.Id">@program.Name</option> <!-- Change ProgramOfStudyId to Id -->
            }
        </select>
        <span class="text-danger" asp-validation-for="ProgramOfStudyId"></span>
    </div>

    <!--buttons-->
    <button type="submit" class="btn btn-success">Add Student</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
