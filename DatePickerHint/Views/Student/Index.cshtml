@model IEnumerable<DatePickerHint.Models.Student>

<h2>All Students</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a> <!-- Add Student button -->
</p>

<table class="table">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Age</th>
            <th>GPA</th>
            <th>GPA Scale</th>
            <th>Program</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.LastName</td>
                <td>@student.FirstName</td>
                <td>@student.Age</td>
                <td>@student.GPA</td>
                <td>@student.GPAScale</td>
                <td>@student.ProgramOfStudy?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
